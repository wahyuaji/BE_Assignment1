<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>books</title>
  </head>
  <body>
    <div class="container">
      <h1>books</h1>

      <form class="mb-5">
        <input type="text" class="form-control" placeholder="Search.." name="q">
      </form>
      <div class="d-flex flex-wrap gap-2">
        
        <% books.forEach(book => { %>
        <div class="card" style="width: 200px">
          <a href="/books/<%= book.id %>">
            <img src="https://images.pexels.com/photos/46274/pexels-photo-46274.jpeg" class="card-img-top" alt="...">
          </a>
          <div class="card-body">
            <!-- <p><%= book.id %></p> -->

            <h3 class="card-title"><%= book.title %></h3>
            <h6><%= book.author %><p><%= book.year_written %></p></h6>
            <h6>$<%= book.price %></h3>
            <h6>Edition <%= book.edition %></h6>
            <a href="#" class="btn btn-primary " style="float: right">Buy</a>
          </div>
         </div>
        <% }) %>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>